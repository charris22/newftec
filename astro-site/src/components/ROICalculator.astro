---
/**
 * ROI Calculator Component
 * Interactive tool to help prospects estimate potential savings
 */

interface Props {
  title?: string;
}

const { title = 'Estimate Your Cloud Savings' } = Astro.props;
---

<div class="roi-calculator">
  <h3>{title}</h3>
  <form id="roi-form">
    <div class="form-group">
      <label for="current-infra">Current Monthly IT Infrastructure Cost</label>
      <div class="input-wrapper">
        <span class="currency">$</span>
        <input type="number" id="current-infra" value="10000" min="0" step="100">
      </div>
    </div>
    
    <div class="form-group">
      <label for="team-hours">Hours/Week Spent on Manual IT Tasks</label>
      <input type="number" id="team-hours" value="20" min="0" max="168">
    </div>

    <div class="form-group">
      <label for="hourly-rate">Average Hourly Rate</label>
      <div class="input-wrapper">
        <span class="currency">$</span>
        <input type="number" id="hourly-rate" value="75" min="0">
      </div>
    </div>

    <button type="button" id="calculate-btn" class="calculate-button">
      Calculate Potential Savings
    </button>
  </form>

  <div class="results" id="roi-results" style="display: none;">
    <h4>Estimated Annual Savings</h4>
    <div class="savings-grid">
      <div class="saving-item">
        <span class="saving-label">Infrastructure Optimization</span>
        <span class="saving-value" id="infra-savings">$0</span>
      </div>
      <div class="saving-item">
        <span class="saving-label">Automation Savings</span>
        <span class="saving-value" id="automation-savings">$0</span>
      </div>
      <div class="saving-item total">
        <span class="saving-label">Total Annual Savings</span>
        <span class="saving-value" id="total-savings">$0</span>
      </div>
    </div>
    <p class="disclaimer">*Estimates based on typical cloud migration results. Actual savings may vary.</p>
    <a href="/contact" class="cta-link">Get a detailed assessment â†’</a>
  </div>
</div>

<script>
  const form = document.getElementById('roi-form');
  const results = document.getElementById('roi-results');
  const calculateBtn = document.getElementById('calculate-btn');

  calculateBtn?.addEventListener('click', () => {
    const currentInfra = parseFloat((document.getElementById('current-infra') as HTMLInputElement).value) || 0;
    const teamHours = parseFloat((document.getElementById('team-hours') as HTMLInputElement).value) || 0;
    const hourlyRate = parseFloat((document.getElementById('hourly-rate') as HTMLInputElement).value) || 0;

    // Cloud migrations typically save 30-40% on infrastructure
    const infraSavings = Math.round(currentInfra * 0.35 * 12);
    
    // Automation typically saves 60-70% of manual task time
    const automationSavings = Math.round(teamHours * 0.65 * hourlyRate * 52);
    
    const totalSavings = infraSavings + automationSavings;

    document.getElementById('infra-savings')!.textContent = `$${infraSavings.toLocaleString()}`;
    document.getElementById('automation-savings')!.textContent = `$${automationSavings.toLocaleString()}`;
    document.getElementById('total-savings')!.textContent = `$${totalSavings.toLocaleString()}`;

    results!.style.display = 'block';
    results!.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
  });
</script>

<style>
  .roi-calculator {
    background: #fff;
    border-radius: 12px;
    padding: 30px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  h3 {
    font-size: 24px;
    font-weight: 700;
    color: #1a202c;
    margin-bottom: 25px;
    text-align: center;
  }

  .form-group {
    margin-bottom: 20px;
  }

  label {
    display: block;
    font-size: 14px;
    font-weight: 500;
    color: #4a5568;
    margin-bottom: 8px;
  }

  .input-wrapper {
    position: relative;
    display: flex;
    align-items: center;
  }

  .currency {
    position: absolute;
    left: 15px;
    color: #718096;
    font-weight: 500;
  }

  input[type="number"] {
    width: 100%;
    padding: 12px 15px;
    border: 2px solid #e5e7eb;
    border-radius: 8px;
    font-size: 16px;
    transition: border-color 0.2s;
  }

  .input-wrapper input {
    padding-left: 35px;
  }

  input:focus {
    outline: none;
    border-color: #3b82f6;
  }

  .calculate-button {
    width: 100%;
    padding: 14px;
    background: #3b82f6;
    color: #fff;
    border: none;
    border-radius: 8px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.2s;
    margin-top: 10px;
  }

  .calculate-button:hover {
    background: #2563eb;
  }

  .results {
    margin-top: 30px;
    padding-top: 30px;
    border-top: 2px solid #e5e7eb;
  }

  .results h4 {
    font-size: 18px;
    font-weight: 600;
    color: #1a202c;
    margin-bottom: 20px;
    text-align: center;
  }

  .savings-grid {
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .saving-item {
    display: flex;
    justify-content: space-between;
    padding: 15px;
    background: #f9fafb;
    border-radius: 8px;
  }

  .saving-item.total {
    background: #f0fdf4;
    border: 2px solid #10b981;
  }

  .saving-label {
    color: #4a5568;
    font-weight: 500;
  }

  .saving-value {
    font-weight: 700;
    color: #1a202c;
  }

  .saving-item.total .saving-value {
    color: #047857;
    font-size: 20px;
  }

  .disclaimer {
    font-size: 12px;
    color: #718096;
    text-align: center;
    margin-top: 20px;
  }

  .cta-link {
    display: block;
    text-align: center;
    color: #3b82f6;
    font-weight: 600;
    text-decoration: none;
    margin-top: 15px;
    transition: color 0.2s;
  }

  .cta-link:hover {
    color: #2563eb;
  }

  /* Dark mode styles */
  :global(html.dark) .roi-calculator {
    background: #1e293b;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  }

  :global(html.dark) h3 {
    color: #f1f5f9;
  }

  :global(html.dark) label {
    color: #cbd5e1;
  }

  :global(html.dark) .currency {
    color: #94a3b8;
  }

  :global(html.dark) input[type="number"] {
    background: #334155;
    border-color: #475569;
    color: #f1f5f9;
  }

  :global(html.dark) input:focus {
    border-color: #3b82f6;
  }

  :global(html.dark) .results {
    border-top-color: #475569;
  }

  :global(html.dark) .results h4 {
    color: #f1f5f9;
  }

  :global(html.dark) .saving-item {
    background: #334155;
  }

  :global(html.dark) .saving-item.total {
    background: #064e3b;
    border-color: #10b981;
  }

  :global(html.dark) .saving-label {
    color: #cbd5e1;
  }

  :global(html.dark) .saving-value {
    color: #f1f5f9;
  }

  :global(html.dark) .saving-item.total .saving-value {
    color: #34d399;
  }

  :global(html.dark) .disclaimer {
    color: #94a3b8;
  }
</style>
