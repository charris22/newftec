---
/**
 * Trust Badges Component
 * Displays certifications, partnerships, and trust signals
 */

interface Props {
  variant?: 'light' | 'dark';
}

const { variant = 'light' } = Astro.props;

const badges = [
  { 
    name: 'Cloud Certified',
    icon: 'üèÖ',
    description: 'Certified Cloud Architect'
  },
  { 
    name: 'AI Specialist',
    icon: 'ü§ñ',
    description: 'GenAI & ML Expert'
  },
  { 
    name: 'SOC 2 Compliant',
    icon: 'üîí',
    description: 'Security Certified'
  },
  { 
    name: '50+ Projects',
    icon: '‚úÖ',
    description: 'Successfully Delivered'
  }
];
---

<div class:list={['trust-badges', variant]}>
  {badges.map(badge => (
    <div class="badge">
      <span class="badge-icon">{badge.icon}</span>
      <div class="badge-text">
        <span class="badge-name">{badge.name}</span>
        <span class="badge-desc">{badge.description}</span>
      </div>
    </div>
  ))}
</div>

<style>
  .trust-badges {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 30px;
    padding: 30px 0;
  }

  .badge {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .badge-icon {
    font-size: 2rem;
  }

  .badge-text {
    display: flex;
    flex-direction: column;
  }

  .badge-name {
    font-weight: 600;
    font-size: 14px;
  }

  .badge-desc {
    font-size: 12px;
    opacity: 0.7;
  }

  /* Light variant */
  .trust-badges.light {
    background: #f9fafb;
    border-top: 1px solid #e5e7eb;
    border-bottom: 1px solid #e5e7eb;
  }

  .trust-badges.light .badge-name {
    color: #1a202c;
  }

  .trust-badges.light .badge-desc {
    color: #4a5568;
  }

  /* Dark variant */
  .trust-badges.dark {
    background: #1a202c;
  }

  .trust-badges.dark .badge-name {
    color: #fff;
  }

  .trust-badges.dark .badge-desc {
    color: #a0aec0;
  }

  @media (max-width: 768px) {
    .trust-badges {
      gap: 20px;
    }

    .badge {
      flex-basis: calc(50% - 10px);
      justify-content: center;
    }
  }

  /* Dark mode overrides for light variant */
  :global(html.dark) .trust-badges.light {
    background: #1e293b;
    border-top-color: #475569;
    border-bottom-color: #475569;
  }

  :global(html.dark) .trust-badges.light .badge-name {
    color: #f1f5f9;
  }

  :global(html.dark) .trust-badges.light .badge-desc {
    color: #94a3b8;
  }
</style>
