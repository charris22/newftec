---
/**
 * Trust Badges Component
 * Displays certifications, partnerships, and trust signals
 */

interface Props {
  variant?: 'light' | 'dark';
}

const { variant = 'light' } = Astro.props;

const badges = [
  { 
    name: 'Cloud Certified',
    icon: 'üèÖ',
    description: 'Certified Cloud Architect'
  },
  { 
    name: 'AI Specialist',
    icon: 'ü§ñ',
    description: 'GenAI & ML Expert'
  },
  { 
    name: '20+ Years of project experience',
    icon: '‚úÖ',
    description: 'Successfully Delivered'
  }
];
---

<div class:list={['trust-badges', variant]}>
  {badges.map(badge => (
    <div class="badge">
      <span class="badge-icon">{badge.icon}</span>
      <div class="badge-text">
        <span class="badge-name">{badge.name}</span>
        <span class="badge-desc">{badge.description}</span>
      </div>
    </div>
  ))}
</div>

<style>
  .trust-badges {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 40px;
    padding: 40px 20px;
    position: relative;
  }

  .badge {
    display: flex;
    align-items: center;
    gap: 14px;
    padding: 12px 20px;
    background: var(--bg-card);
    border-radius: 12px;
    border: 1px solid var(--border-light);
    transition: all 0.25s ease;
  }

  .badge:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
    border-color: var(--accent-primary);
  }

  .badge-icon {
    font-size: 1.5rem;
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--accent-gradient-soft);
    border-radius: 10px;
  }

  .badge-text {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .badge-name {
    font-weight: 700;
    font-size: 14px;
    letter-spacing: -0.01em;
  }

  .badge-desc {
    font-size: 12px;
    opacity: 0.7;
  }

  /* Light variant */
  .trust-badges.light {
    background: var(--bg-tertiary);
    border-top: 1px solid var(--border-light);
    border-bottom: 1px solid var(--border-light);
  }

  .trust-badges.light .badge-name {
    color: var(--text-primary);
  }

  .trust-badges.light .badge-desc {
    color: var(--text-secondary);
  }

  /* Dark variant */
  .trust-badges.dark {
    background: var(--bg-dark);
  }

  .trust-badges.dark .badge {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 255, 255, 0.1);
  }

  .trust-badges.dark .badge-name {
    color: #fff;
  }

  .trust-badges.dark .badge-desc {
    color: #a0aec0;
  }

  @media (max-width: 768px) {
    .trust-badges {
      gap: 16px;
    }

    .badge {
      flex-basis: calc(50% - 8px);
      justify-content: center;
      padding: 10px 14px;
    }
  }

  /* Dark mode overrides for light variant */
  :global(html.dark) .trust-badges.light {
    background: var(--bg-secondary);
    border-top-color: var(--border-color);
    border-bottom-color: var(--border-color);
  }

  :global(html.dark) .trust-badges.light .badge {
    background: var(--bg-tertiary);
    border-color: var(--border-color);
  }

  :global(html.dark) .trust-badges.light .badge:hover {
    border-color: var(--accent-primary);
  }

  :global(html.dark) .trust-badges.light .badge-name {
    color: var(--text-primary);
  }

  :global(html.dark) .trust-badges.light .badge-desc {
    color: var(--text-secondary);
  }
</style>
