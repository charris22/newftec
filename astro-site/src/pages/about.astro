      <p class="section-intro">Every decision we make is guided by three principles‚Äîthe same qualities that define our Newfoundland namesake.</p>
      
      <div class="values-grid-modern">
        {coreValues.map(value => (
          <div class="value-card-modern">
            <span class="value-icon">{value.icon}</span>
            <h3>{value.title}</h3>
            <p>{value.description}</p>
            <div class="value-example">
              <strong>In practice:</strong> {value.example}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Why Choose Us Section -->
  <section class="why-us-section">
    <div class="container">
      <span class="section-label">The NEWFTEC Difference</span>
      <h2>Why Choose Us?</h2>
      
      <div class="differentiators-grid">
        {differentiators.map(item => (
          <div class="differentiator-card">
            <span class="differentiator-icon">{item.icon}</span>
            <h3>{item.title}</h3>
            <p>{item.description}</p>
          </div>
        ))}
